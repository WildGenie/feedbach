#frontpage(vertical-center)
  h1 feedba.ch
  p.lead Vote or create a survey below!
  form(ng-submit='submit()')
    input(type='text', placeholder='{{placeholder}}', ng-model='input.id', autocorrect='off', autocapitalize='off').text-center
    br
    button.btn Start!
  h4(ng-if='surveys.length != 0') Your surveys:
  li(ng-repeat="survey in surveys | orderBy:'_id':true | limitTo:5"): a(href='/#/view/{{survey.id}}') {{survey.id}} 
    span(ng-if="survey.description != ''") - {{survey.description | words:5 }}
  a(ng-if='surveys.length > 5', href='/#/overview'): strong More...
div(modal='feedbackGiven', close='closeModal()', options='modalOpts')
  .modal-header
    h3 Feedback already given
  .modal-body We've already recieved your feedback for id 
    strong {{id()}}.
  .modal-footer
    button.btn.btn-warning.cancel(ng-click='closeModal()') OK
