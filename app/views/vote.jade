#vote(ng-switch='view')
  .fetching(ng-switch-when='fetching')      Please wait...
  .vote(ng-switch-when='vote')
    h4 Please vote below!
    ul.nav.nav-tabs
      li(ng-repeat='q in survey.questions', ng-class='{ active: $index==activeTab }')
        a(ng-click='setActive($index)')
          span.hidden-phone Question 
          | {{$index + 1}}
    .tab-content
      .tab(ng-repeat='q in survey.questions')
        fieldset(ng-show='$index==activeTab', ng-animate="'slide'")
          b {{q.question}}
          .answer(ng-repeat='a in q.answers')
            input.pull-left(type='radio', id='[{{$parent.$index}}][{{$index}}]', name='vote{{$parent.$index}}', value='{{$index}}', ng-model='feedback.votes[$parent.$index]', ng-change='vote()')
            label(for='[{{$parent.$index}}][{{$index}}]') {{a.answer}}
fb-modal(vote-recieved)
fb-modal(vote-already-recieved)
fb-modal(survey-not-found)
